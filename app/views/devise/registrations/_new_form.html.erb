<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {"data-turbo" => false}) do |f| %>
  <%= render partial: "/shared/errors", locals: {obj: resource, name: "User"} %>

  <h2 class="mt-3">Sign up</h2>

  <div class="form-row">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>
  <div class="form-row">
    <%= f.label :username %>
    <%= f.text_field :username, required: true, class: "form-control" %>
  </div>
  <div class="form-row">
    <%= f.label :password do %>
      Password
      <small class="less-strong">(<%= User.password_length.min %> characters minimum)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>
  <div class="actions form-row-btn">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>
