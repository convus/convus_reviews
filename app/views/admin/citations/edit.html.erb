<h1 class="standard-top-offset mb-4">Edit Citation</h1>
<% citation ||= @citation %>
<% editing_citation = citation.id.present? %>
<% form_url = editing_citation ? admin_citation_url(citation) : admin_citations_url %>
<%= form_with(model: citation, url: form_url, method: (editing_citation ? :patch : :post), class: "pb-2") do |f| %>
  <%= render partial: "/shared/errors", locals: {obj: citation, name: "Citation"} %>
  <%= f.hidden_field :timezone, class: "hiddenFieldTimezone" %>
  <div class="row sm:grid-cols-2">
    <div class="col">
      <div class="form-row">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
    </div>
  </div>
  <div class="form-row">
    <%= f.label :topics_string do %>
      Topics
      <small class="less-strong">Comma delineated</small>
    <% end %>
    <%= f.text_field :topics_string, class: "form-control" %>
  </div>
  <div class="form-row-btn">
    <%= f.submit "save", class: "btn" %>
  </div>
<% end %>
