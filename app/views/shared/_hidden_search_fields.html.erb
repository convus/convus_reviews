<%# Sortable %>
<%= hidden_field_tag :sort, sort_column %>
<%= hidden_field_tag :sort_direction, sort_direction %>
<%# Period %>
<%= hidden_field_tag :render_chart, @render_chart %>
<%= hidden_field_tag :period, params[:period] %>
<%= hidden_field_tag :end_time, params[:end_time] %>
<%= hidden_field_tag :start_time, params[:start_time] %>
<%= hidden_field_tag :search_updated_at, params[:search_updated_at] %>

<%# convus search keys %>
<% skip_user ||= false %>
<% unless skip_user %>
  <%= hidden_field_tag :user, params[:user] %>
<% end %>

<% skip_topics ||= false %>
<% unless skip_topics %>
  <%= hidden_field_tag :search_topics, params[:search_topics] %>
<% end %>

<% skip_publisher ||= false %>
<% unless skip_publisher %>
  <%= hidden_field_tag :search_publisher, params[:search_publisher] %>
<% end %>

<% skip_author ||= false %>
<% unless skip_author %>
  <%= hidden_field_tag :search_author, params[:search_author] %>
<% end %>
